{
  "name": "blog",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "prestart": "npm run build:utils && npm run posts:update",
    "start": "ng serve",
    "prebuild": "npm run posts:update && npm run images:authors && npm run images:posts",
    "build": "ng build",
    "build:utils": "ng build utils",
    "build:all": "npm run build:utils && npm run build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "posts:publish": "node --experimental-specifier-resolution=node tools/publish",
    "posts:update": "node tools/build-posts",
    "posts:new": "ng generate ./tools/post-scaffolder:post-scaffolder",
    "preposts:new": "cd tools/post-scaffolder && npm i && npm run build",
    "images:authors": "node tools/process-images content/authors/avatars --lg 200,200",
    "images:posts": "node tools/process-images content/posts --lg 1920,0 --md 1280,0",
    "premeetup:new": "cd tools/meetup-scaffolder && npm i && npm run build",
    "meetup:new": "ng generate ./tools/meetup-scaffolder:meetup-scaffolder",
    "prettier": "prettier --write ."
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.15",
    "@angular/cdk": "^19.2.19",
    "@angular/common": "^19.2.15",
    "@angular/compiler": "^19.2.15",
    "@angular/core": "^19.2.15",
    "@angular/forms": "^19.2.15",
    "@angular/material": "^19.2.19",
    "@angular/platform-browser": "^19.2.15",
    "@angular/platform-browser-dynamic": "^19.2.15",
    "@angular/platform-server": "^19.2.15",
    "@angular/router": "^19.2.15",
    "@angular/ssr": "^19.2.17",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-web": "^0.51.0",
    "@opentelemetry/context-zone-peer-dep": "^2.1.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/instrumentation": "^0.205.0",
    "@opentelemetry/instrumentation-user-interaction": "^0.50.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-trace-web": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "express": "^4.21.0",
    "ngx-markdown": "^19.1.1",
    "prismjs": "^1.29.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.17",
    "@angular/cli": "^19.2.17",
    "@angular/compiler-cli": "^19.2.15",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "gifwrap": "^0.10.1",
    "husky": "^8.0.3",
    "jasmine-core": "~5.1.0",
    "jimp": "^0.22.12",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.0",
    "marked": "^15.0.12",
    "ng-packagr": "^19.2.2",
    "prettier": "^3.2.4",
    "reading-time-estimator": "^1.9.2",
    "typescript": "~5.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,html,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
